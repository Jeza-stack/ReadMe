      "practiceActivities": [
        {
          "id": "writing-1",
          "title": "Fill Forms",
          "description": "Practice filling out basic forms with personal information",
          "type": "form-filling",
          "content": [
            {
              "formTitle": "Hotel Registration Form",
              "fields": [
                {
                  "label": "First Name",
                  "type": "text",
                  "required": true,
                  "example": "John"
                },
                {
                  "label": "Last Name",
                  "type": "text",
                  "required": true,
                  "example": "Smith"
                },
                {
                  "label": "Date of Birth",
                  "type": "date",
                  "required": true,
                  "example": "15/03/1990"
                },
                {
                  "label": "Email Address",
                  "type": "email",
                  "required": true,
                  "example": "john.smith@email.com"
                },
                {
                  "label": "Phone Number",
                  "type": "tel",
                  "required": true,
                  "example": "+1-555-123-4567"
                }
              ]
            }
          ]
        },
        {
          "id": "writing-2",
          "title": "Write Postcards",
          "description": "Practice writing simple postcard messages",
          "type": "creative-writing",
          "content": [
            {
              "scenario": "You are on vacation in Paris. Write a postcard to your friend.",
              "template": {
                "greeting": "Dear [Friend's Name],",
                "body": "I am in Paris. The weather is [weather]. I am staying at [hotel name]. Today I [activity]. The food is [description]. I miss you!",
                "closing": "Love, [Your Name]"
              },
              "prompts": [
                "Write about the weather",
                "Describe your hotel",
                "Tell about one activity you did",
                "Describe the food"
              ]
            }
          ]
        },
        {
          "id": "writing-3",
          "title": "Short Notes",
          "description": "Practice writing brief messages and notes",
          "type": "message-writing",
          "content": [
            {
              "scenario": "Write a note to your roommate",
              "template": "Hi [Name],\n\n[Your message here]\n\nThanks,\n[Your name]",
              "examples": [
                "I'm going to the store. I'll be back at 3 PM.",
                "Please buy milk and bread. I'll pay you back.",
                "I'm not feeling well today. I'm staying in bed.",
                "The meeting is at 2 PM tomorrow. Don't forget!"
              ]
            }
          ]
        },
        {
          "id": "writing-4",
          "title": "Personal Details",
          "description": "Practice writing about yourself and personal information",
          "type": "descriptive-writing",
          "content": [
            {
              "topic": "My Family",
              "prompts": [
                "Write about your family members",
                "Describe their jobs",
                "Write about where they live",
                "Describe their personalities"
              ],
              "example": "My family is small. I have one brother and one sister. My brother is a teacher. My sister is a doctor. We live in London."
            },
            {
              "topic": "My Daily Routine",
              "prompts": [
                "Write about what you do in the morning",
                "Describe your work or school day",
                "Write about your evening activities",
                "Describe your weekend routine"
              ],
              "example": "I wake up at 7 AM. I have breakfast at 7:30 AM. I go to work at 8 AM. I work until 5 PM. I have dinner at 7 PM."
            }
          ]
        }
      ],
